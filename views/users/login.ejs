<% var title = 'Login'; %>
<% var links = ['/css/login.css']; %>

<% var panelType = 'panel-default'; %>
<% if (error && error.length) { %>
    <% panelType = 'panel-danger'; %>
<% } %>

<% include ../head %>

<div class="container">
    <div class="panel <%= panelType %>">
        <% if (error && error.length) { %>      
            <div class="alert panel-heading">
                <button type="button" class="close" data-dismiss="alert" 
                aria-hidden="true">&times;</button>
                <%= error %>
            </div>
        <% } %>
        <div class="panel-body"> 
            <form role="form" class="form-content" name="user" method="post" action="/login">
               
                <h2>Please sign in</h2>
                
                <input class="form-control" type="text" name="email" 
                autocomplete='off' placeholder="Email address" required autofocus>
    
                <input class="form-control" type="password" name="password"
                placeholder="Password" required>
  
                <label class="checkbox" for='remember_me'>
                    <input id="remember_me" name='remember_me' type="checkbox" value="remember-me">
                    Remember me
                </label>
   
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
            </form>
        </div>
        <div class="panel-footer">
            <div class="form-content">
                <span class="help-block">
                   Not a member? <a href="/register" class="button">Register now Â»</a>
                </span>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script src="/bootstrap/js/bootstrap.min.js"></script>
<script>
$('.alert').bind('closed.bs.alert', function () {
  $('.panel').removeClass("panel-danger").addClass('panel-default');
})
</script>
<% include ../foot %>  
